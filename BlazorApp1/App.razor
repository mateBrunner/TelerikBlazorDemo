@*A legkülső burok*@
<CascadingAuthenticationState>
<Router AppAssembly="@typeof(Program).Assembly">
    @*Ha létezik a path, megjelenítjük a MainLayout-ot*@
    <Found Context="routeData">
        @*A DefaultLayout-tal adunk meg layout-ot olyan komponensnek, aminek amúgy nincs*@
        <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
            <NotAuthorized>
                <h1>Sorry</h1>
                <p>You're not authorized to reach this page.</p>
                <p>You may need to log in as a different user.</p>
            </NotAuthorized>
            <Authorizing>
                <h1>Authentication in progress</h1>
                <p>Only visible while authentication is in progress.</p>
            </Authorizing>
        </AuthorizeRouteView>
    </Found>
    <NotFound>
        @*Ha nem létező path-t hívunk, akkor is megjelenítjük a MainLayout-ot, és a belső részébe kerül a hibaüzenet*@
        <LayoutView Layout="@typeof(MainLayout)">
            <p>Sorry, there's nothing at this address.</p>
        </LayoutView>
    </NotFound>
</Router>
</CascadingAuthenticationState>
